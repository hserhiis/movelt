
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    match /driverProfiles/{driverId} {
      allow read: if true;
      allow create, update: if request.auth.uid == driverId;
    }

    match /users/{userId} {
      allow create: if request.auth.uid == userId;
      allow read: if request.auth.uid == userId;
    }
    
    match /bookings/{bookingId} {
      allow create: if request.auth.uid != null && request.auth.uid == request.resource.data.clientId;
      
      // Allows any authenticated user to read booking data.
      // This is required for the public calendar to show availability.
      allow read: if request.auth.uid != null;
      
      allow update: if (request.auth.uid == resource.data.clientId && request.resource.data.status == 'cancelled') || 
                       (request.auth.uid == resource.data.driverId);
                       
      allow delete: if request.auth.uid == resource.data.clientId;
    }
  }
}
